// clocale standard header
#ifndef _CLOCALE_
#define _CLOCALE_

#ifndef _SYSTEM_BUILD
  #pragma system_include
#endif

#include <yvals.h>
#ifndef _NO_LOCALE

  #ifdef _STD_USING
    #undef _STD_USING
    #include <locale.h>
    #define _STD_USING
  #else /* _STD_USING */
    #include <locale.h>

    #ifdef _GLOBAL_USING
      _STD_BEGIN
      using _CSTD lconv; using _CSTD localeconv; using _CSTD setlocale;
      _STD_END
    #endif /* _GLOBAL_USING */
  #endif /* _STD_USING */
#endif /* _NO_LOCALE */
#endif /* _CLOCALE_ */

